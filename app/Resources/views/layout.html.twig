{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}SP Member{% endblock %}</title>

  {% block stylesheets %}
    {# On charge le CSS de bootstrap depuis le site de twitter directement #}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  {% endblock %}
</head>

<body>
  <div class="container">
    <div id="header" class="jumbotron">
      <h1>SimpleTicket</h1>
      <p>
        Ce projet est propulsé par Symfony2.
      </p>
    </div>

    <div class="row">
      <div id="menu" class="col-md-3">
        <h3>Menu</h3>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="{{ path('sp_member_homepage') }}">Liste des membres</a></li>
          <li><a href="{{ path('sp_member_add') }}">Ajouter un membre</a></li>
          <li><a href="{{ path('sp_company_homepage') }}">Liste des entites</a></li>
           <li><a href="{{ path('sp_company_add') }}">Ajouter une entite</a></li>
        </ul>


      </div>
      <div id="content" class="col-md-9">
        {% block body %}
        {% endblock %}
      </div>
    </div>

    <hr>

    <footer>
      <p>Coworking Lille © {{ 'now'|date('Y') }} .</p>
    </footer>
  </div>

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}

</body>
</html>
